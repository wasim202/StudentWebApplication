@model List<StudentWebApplication.Models.Student>
@{
    ViewData["Title"] = "Students";
}
<h2>Students</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add Student</a>
<table class="table table-bordered">
    <thead>
        <tr><th>Id</th><th>Name</th><th>Age</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
